<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/st_back"
    tools:context="com.example.a303.teachlink.StudentQuestion"
    >

    <TextView
        android:id="@+id/TV_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Choose_Answer"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/TV_Title"
        android:id="@+id/laout_question_a"



        >


        <Button
            android:id="@+id/BT_AnswerA"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:text="A"

            android:textSize="150sp"
            android:background="@drawable/answe_back_pink"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/laout_question_a"
        android:id="@+id/laout_question_b"
        android:layout_marginTop="22sp"


        >



        <Button
            android:id="@+id/BT_AnswerB"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:text="B"
            android:textSize="150sp"
            android:background="@drawable/answe_back_r"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/TV_Title"
        android:id="@+id/laout_question_c"

        android:layout_alignParentRight="true"



        >


        <Button
            android:id="@+id/BT_AnswerC"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:text="C"
            android:textSize="150sp"
            android:background="@drawable/answe_back_o"



            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/laout_question_c"

        android:layout_alignParentRight="true"
        android:layout_marginTop="22sp"
        android:id="@+id/laout_question_d"

        >


        <Button
            android:id="@+id/BT_AnswerD"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:text="D"
            android:textSize="150sp"
            android:background="@drawable/answe_back_g"

            />
    </LinearLayout>


</RelativeLayout>
